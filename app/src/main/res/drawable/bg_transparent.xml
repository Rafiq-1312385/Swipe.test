<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="1px" android:layout_width="1px" >
    <item>
        <shape android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <solid android:color="#00ffffff"/>
            <!--make button border solid color, nontransparent-->
            <stroke android:color="@android:color/holo_blue_dark" android:width="2dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>