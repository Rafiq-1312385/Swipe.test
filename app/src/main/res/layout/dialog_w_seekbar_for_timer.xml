<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_limiter"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <SeekBar android:max="300"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_set_seconds"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="74dp">
    </SeekBar>

    <TextView android:text="Select how many seconds to play for! : "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/Select_Seconds"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:paddingTop="25dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Custom_Cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/btn_Custom_play"
        android:layout_alignBottom="@+id/btn_Custom_play"
        android:layout_toRightOf="@+id/btn_Custom_play"
        android:layout_toEndOf="@+id/btn_Custom_play" />

    <Button
        android:text="play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Custom_play"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/seekbar_set_seconds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
